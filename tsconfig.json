{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "lib": [
            "dom",
            "es2019"
        ],
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@zeejs/*": [
                "packages/*/src"
            ]
        },
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "newLine": "LF",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    }
}