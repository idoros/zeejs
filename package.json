{
    "name": "zeejs",
    "license": "MIT",
    "author": "Ido Rosenthal",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf ./packages/*/dist",
        "build": "tsc --build && lerna run build:after --stream",
        "watch": "tsc --build -w && lerna run build:after --stream",
        "pretest": "yarn build && yarn test:types && yarn test:lint",
        "test:types": "tsc --noEmit",
        "test:lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "test": "lerna run test",
        "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
    },
    "devDependencies": {
        "@file-services/node": "^5.3.1",
        "@ts-tools/build": "^2.1.1",
        "@ts-tools/node": "^2.1.1",
        "@ts-tools/webpack-loader": "^2.1.1",
        "@types/chai": "^4.2.17",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^8.2.2",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.3",
        "@types/rimraf": "^3.0.0",
        "@types/sinon": "^10.0.0",
        "@types/sinon-chai": "^3.2.5",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "@zeejs/test-browser": "^0.1.0",
        "@zeejs/test-browser-bridge": "^0.1.0",
        "chai": "^4.3.4",
        "chai-subset": "^1.6.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.2.4",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^5.3.1",
        "lerna": "^4.0.0",
        "mini-css-extract-plugin": "^1.6.0",
        "mocha": "^8.3.2",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.10.0",
        "pleb": "^3.4.3",
        "promise-assist": "^1.3.0",
        "rimraf": "^3.0.2",
        "sinon": "^10.0.0",
        "sinon-chai": "^3.6.0",
        "source-map-loader": "^2.0.1",
        "typescript": "~4.2.4",
        "util": "^0.12.3",
        "webpack": "^5.36.2",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2"
    },
    "engines": {
        "node": ">=10"
    },
    "repository": "git@github.com:idoros/zeejs.git"
}
