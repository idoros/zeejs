        "playwright": "^1.0.2",
        "pleb": "^2.5.12",
        "promise-assist": "^1.3.0",
        "rimraf": "^3.0.2",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "~3.9.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
