{
    "name": "zeejs",
    "license": "MIT",
    "author": "Ido Rosenthal",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "prebuild": "yarn clean",
        "build": "lerna run build --stream",
        "pretest": "yarn test:types && yarn test:lint",
        "test:types": "tsc --noEmit",
        "test:lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "test": "lerna run test --stream",
        "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
    },
    "devDependencies": {
        "@ts-tools/build": "^1.2.6",
        "@ts-tools/node": "^1.1.3",
        "@ts-tools/webpack-loader": "^1.1.4",
        "@types/chai": "^4.2.11",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^7.0.2",
        "@types/puppeteer": "^2.0.1",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/rimraf": "^3.0.0",
        "@types/sinon": "^9.0.0",
        "@types/sinon-chai": "^3.2.4",
        "@types/webpack": "^4.41.10",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "chai": "^4.2.0",
        "chai-subset": "^1.6.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "lerna": "^3.20.2",
        "mocha": "^7.1.1",
        "mocha-pup": "^3.0.0",
        "npm-run-all": "^4.1.5",
        "promise-assist": "^1.3.0",
        "puppeteer": "^2.1.1",
        "rimraf": "^3.0.2",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "~3.8.3",
        "webpack": "^4.42.1",
        "webpack-dev-server": "^3.10.3"
    },
    "engines": {
        "node": ">=10"
    },
    "repository": "git@github.com:idoros/zeejs.git"
}