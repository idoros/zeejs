        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^8.0.3",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@types/rimraf": "^3.0.0",
        "@types/sinon": "^9.0.5",
        "@types/sinon-chai": "^3.2.4",
        "@types/webpack": "^4.41.22",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "@zeejs/test-browser": "^0.1.0",
