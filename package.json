        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^7.0.2",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/rimraf": "^3.0.0",
        "@types/sinon": "^9.0.4",
        "@types/sinon-chai": "^3.2.4",
        "@types/tabbable": "^3.1.0",
        "@types/webpack": "^4.41.17",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "@zeejs/test-browser": "^0.0.1",
        "chai": "^4.2.0",
        "chai-subset": "^1.6.0",
        "css-loader": "^3.5.3",
        "eslint": "^7.2.0",
