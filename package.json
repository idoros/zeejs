{
    "name": "zeejs",
    "license": "MIT",
    "author": "Ido Rosenthal",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rimraf ./packages/*/dist",
        "build": "tsc --build && lerna run build:after --stream",
        "watch": "tsc --build -w && lerna run build:after --stream",
        "pretest": "yarn build && yarn test:types && yarn test:lint",
        "test:types": "tsc --noEmit",
        "test:lint": "eslint . --ext .js,.ts,.tsx -f codeframe",
        "test": "lerna run test",
        "prettify": "npx prettier \"packages/**/*.{js,ts,tsx}\" --write"
    },
    "devDependencies": {
        "@file-services/node": "^5.4.0",
        "@ts-tools/build": "^2.1.1",
        "@ts-tools/node": "^3.0.1",
        "@ts-tools/webpack-loader": "^3.0.2",
        "@types/chai": "^4.2.22",
        "@types/chai-subset": "^1.3.3",
        "@types/mocha": "^9.0.0",
        "@types/react": "^17.0.33",
        "@types/react-dom": "^17.0.10",
        "@types/rimraf": "^3.0.2",
        "@types/sinon": "^10.0.6",
        "@types/sinon-chai": "^3.2.5",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "@zeejs/test-browser": "^0.3.0",
        "@zeejs/test-browser-bridge": "^0.3.0",
        "chai": "^4.3.4",
        "chai-subset": "^1.6.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.5.0",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-formatter-codeframe": "^7.32.1",
        "glob": "^7.2.0",
        "html-webpack-plugin": "^5.5.0",
        "lerna": "^4.0.0",
        "mini-css-extract-plugin": "^2.4.3",
        "mocha": "^9.1.3",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.16.2",
        "pleb": "^4.0.0",
        "promise-assist": "^1.3.0",
        "rimraf": "^3.0.2",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "source-map-loader": "^3.0.0",
        "typescript": "~4.4.4",
        "util": "^0.12.4",
        "webpack": "^5.60.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0"
    },
    "engines": {
        "node": ">=10"
    },
    "repository": "git@github.com:idoros/zeejs.git"
}
