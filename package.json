        "playwright": "^1.4.1",
        "pleb": "^3.2.0",
        "promise-assist": "^1.3.0",
        "rimraf": "^3.0.2",
        "sinon": "^9.0.3",
        "sinon-chai": "^3.5.0",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "~4.0.3",
